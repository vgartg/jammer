<div class="bg-white" data-controller="jams">
  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900">Каталог джемов</h2>
      <%= button_to "Создать джем", jams_new_path, method: :get,
                    class: "rounded-md bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow
                    hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500
                    focus:ring-offset-2 transition duration-300" %>
    </div>

    <% if current_user %>
      <div class="flex space-x-4 mb-8">
        <button data-action="click->jams#toggleJams"
                data-jams-target="showAll"
                class="text-lg text-gray-400 hover:text-gray-800 font-medium transition duration-200">Все джемы</button>
        <button data-action="click->jams#toggleJams"
                data-jams-target="showMine"
                class="text-lg text-gray-400 hover:text-gray-800 font-medium transition duration-200">Мои джемы</button>
      </div>
    <% end %>

    <%= form_with url: jams_showcase_path, method: :get,
                  data: { action: "input->jams#search", jams_target: "searchForm" },
                  class: "mt-6 mb-4" do |f| %>
      <div class="flex flex-wrap gap-4">
        <%= f.text_field :search,
                         value: params[:search],
                         placeholder: "Поиск по названию или описанию джема",
                         data: { jams_target: "input" }, autocomplete: "off",
                         class: "block w-full max-w-lg sm:max-w-xs px-4 py-3 border
                         border-gray-300 rounded-md shadow-sm focus:outline-none
                         focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <%= submit_tag "Искать",
                       class: "ml-2 inline-flex items-center justify-center px-4 py-2
      border border-transparent rounded-md shadow-sm text-sm
      font-medium text-white bg-indigo-600 hover:bg-indigo-700
      focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div class="mt-4 flex flex-wrap gap-2">
        <% @tags.each do |tag| %>
          <div>
            <%= check_box_tag 'tag_ids[]', tag.id, params[:tag_ids]&.include?(tag.id.to_s),
                              id: "tag_#{tag.id}", class: "mr-2",
                              data: { jams_target: "tagCheckbox", action: "change->jams#search" } %>
            <%= label_tag "tag_#{tag.id}", tag.name, class: "text-sm font-medium text-gray-700" %>
          </div>
        <% end %>
      </div>

      <%= hidden_field_tag :tag_mode, params[:tag_mode] || 'all', data: { jams_target: "tagMode" } %>

      <div class="mt-4 flex flex-wrap gap-2">
        <%= check_box_tag :toggle_tag_mode, 'any', params[:tag_mode] == 'any',
                          data: { action: "change->jams#toggleTagMode", jams_target: "toggleTagMode" } %>
        <%= label_tag :toggle_tag_mode, " Искать хотя бы с одним из выбранных тегов",
                      class: "text-sm font-medium text-gray-700" %>
      </div>
    <% end %>

    <div id="autocomplete-results" class="autocomplete-results-popup">
      <%= render partial: 'autocomplete_results',
                 locals: { results: @search_results } if @search_results %>
    </div>

    <div data-jams-target="allJams" class="hidden">
      <h3 class="text-xl font-semibold my-4">Все джемы</h3>
      <% if @jams.present? %>
        <%= render partial: 'helpers/showcase_grid', locals: { items: @jams } %>
        <%= render partial: 'helpers/pagy' if @jams.count > 10 %>
      <% else %>
        <p class="text-gray-600 mt-2">Нет доступных джемов.</p>
      <% end %>
    </div>

    <div data-jams-target="myJams" class="mt-6">
      <h3 class="text-xl font-semibold my-4">Мои джемы</h3>
      <% if @jams_accepted.present? %>
        <%= render partial: 'helpers/showcase_grid', locals: { items: @jams_accepted } %>
      <% else %>
        <p class="text-gray-600 mt-2">У вас нет принятых джемов.</p>
      <% end %>

      <h3 class="text-xl font-semibold my-4">Джемы на модерации</h3>
      <% if @jams_under_moderation.present? %>
        <%= render partial: 'helpers/showcase_grid', locals: { items: @jams_under_moderation } %>
      <% else %>
        <p class="text-gray-600 mt-2">У вас нет джемов на модерации.</p>
      <% end %>

      <h3 class="text-xl font-semibold my-4">Отклоненные джемы</h3>
      <% if @jams_rejected.present? %>
        <%= render partial: 'helpers/showcase_grid', locals: { items: @jams_rejected } %>
      <% else %>
        <p class="text-gray-600 mt-2">У вас нет отклоненных джемов.</p>
      <% end %>
    </div>
  </div>
</div>
