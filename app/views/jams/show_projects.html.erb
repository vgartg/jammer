<div class="bg-white" data-controller="games">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex justify-between items-center">
      <h2 class="text-2xl px-4 font-bold tracking-tight text-gray-900">
        <%= t '.title' %>
      </h2>
    </div>
    <% unless @games.empty? %>
      <%= form_with url: jam_show_projects_path, method: :get,
                    data: { action: "input->games#search" },
                    class: "mt-6 mb-4" do |f| %>
        <div class="flex flex-wrap gap-4">
          <%= f.text_field :search,
                           value: params[:search],
                           placeholder: t('games.showcase.search_placeholder'),
                           data: { games_target: "input" }, autocomplete: "off",
                           class: "block w-full max-w-lg sm:max-w-xs px-4 py-3 border
                           border-gray-300 rounded-md shadow-sm focus:outline-none
                           focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <%= submit_tag t('games.showcase.search'),
                         class: "ml-2 inline-flex items-center justify-center px-4 py-2
        border border-transparent rounded-md shadow-sm text-sm
        font-medium text-white bg-indigo-600 hover:bg-indigo-700
        focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>

      <div id="autocomplete-results" class="autocomplete-results-popup">
        <%= render partial: 'autocomplete_results',
                   locals: { results: @search_results } if @search_results %>
      </div>

      <div class="mt-6">
        <% if @games.present? %>
          <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            <% @games.each do |game| %>
              <div>
                <div class="group relative">
                  <a href="<%= game_profile_path(game, jam_id: params[:id]) %>">
                    <% if game && game.cover.attached? %>
                      <%= image_tag url_for(game.cover), alt: game.name,
                                    class: "rounded-md bg-gray-200 w-full h-full lg:h-80 lg:w-full object-cover
          object-center group-hover:opacity-75" %>
                    <% else %>
                      <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200
      lg:aspect-none group-hover:opacity-75 lg:h-80">
                        <img src="https://via.placeholder.com/300" alt="<%= game.name %>"
                             class="h-full w-full object-cover object-center lg:h-full lg:w-full">
                      </div>
                    <% end %>
                  </a>


                </div>

                <div class="mt-4 justify-between line-clamp-2">
                  <div class="flex-1">
                    <h3 class="text-sm text-gray-700 truncate">
                      <a href="/games/<%= game.id %>">
                        <%= game.name %>
                      </a>
                    </h3>
                    <p class="mt-1 text-sm text-gray-500 line-clamp-2">
                      <%= game.description %>
                    </p>
                  </div>
                  <div class="mt-4 text-gray-500 flex flex-wrap gap-2">
                    <% game.tags.each do |tag| %>
                      <span class="bg-gray-200 px-3 py-1 rounded-full text-sm font-medium text-gray-700"><%= tag.name %></span>
                    <% end %>
                  </div>
                  <% if game.author.present? %>
                    <a class="break-all" href="<%= user_profile_path(game.author) %>">
                      <%= game.author.name %>
                    </a>
                  <% else %>
                    <p>
                      <%= t '.no_author' %>
                    </p>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="flex justify-between items-center">
            <h2 class="text-1xl font-bold tracking-tight text-gray-600">
              <%= t '.not_found' %>
            </h2>
          </div>
        <% end %>
      </div>
    <% else %>
      <h2 class="text-1xl px-4 font-bold tracking-tight text-gray-600">
        <%= t '.no_projects' %>
      </h2>
    <% end %>
  </div>
</div>


