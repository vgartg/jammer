<header class="bg-gray-900" role="banner" data-controller="header">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">

    <div class="flex lg:flex-1 p-4">
      <% unless @current_user %>
        <%#= link_to url_for(:root), class: "-m-1.5 p-1.5" %>
        <%= link_to root_path do %>
          <span class="sr-only">Jammer</span>
          <%= image_tag 'whitewithoutwall.png', class: "relative h-8 w-auto scale-150" %>
        <% end %>
      <% end %>
    </div>

    <div data-action="click->header#OpenHeaderMenu" class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      <%#= link_to t(''), url_for(:users) %>
      <%= link_to t('.home'), url_for(:root), class: "text-sm font-semibold leading-6 text-white" %>
      <%= link_to t('.users'), url_for(:users), class: "text-sm font-semibold leading-6 text-white" %>
      <%= link_to t('.games'), url_for(:games_showcase), class: "text-sm font-semibold leading-6 text-white" %>
      <%= link_to t('.jams'), url_for(:jams_showcase), class: "text-sm font-semibold leading-6 text-white" %>
    </div>

    <% if current_user %>
      <div class="hidden lg:flex lg:flex-1 lg:gap-x-12 lg:justify-end">
        <%= link_to t('.dashboard'), url_for(:dashboard), class: "text-sm font-semibold leading-6 text-white" %>
        <div class="relative">
          <button type="button" class="-m-1.5 flex items-center p-1.5" data-action="click->header#toggleLanguageMenu"
                  aria-expanded="false" aria-haspopup="true">
            <p class="text-sm font-semibold leading-6 text-white">
              <%= t I18n.locale %>
            </p>
          </button>
          <div class="hidden absolute right-0 z-50 mt-2.5 w-32 origin-top-right rounded-md bg-white py-2
            shadow-lg ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical"
               aria-labelledby="user-menu-button" tabindex="-1" id="language_menu">
            <% I18n.available_locales.each do |locale| %>
              <p class="text-sm font-semibold leading-6 text-black text-center">
                <% if I18n.locale == locale %>
                  <%#= tag.span t(locale) %>
                <% else %>
                  <%= link_to t(locale), root_path(locale: locale) %>
                <% end %>
              </p>
            <% end %>

          </div>
        </div>
        <%= button_to t(".sign_out"), logout_path, method: :delete,
                      class: "text-sm font-semibold leading-6 text-white" %>
      </div>
    <% else %>
      <div class="hidden lg:flex lg:flex-1 lg:gap-x-12 lg:justify-end">
        <div class="relative">
          <button type="button" class="-m-1.5 flex items-center p-1.5" data-action="click->header#toggleLanguageMenu"
                  aria-expanded="false" aria-haspopup="true">
            <p class="text-sm font-semibold leading-6 text-white">
              <%= t I18n.locale %>
            </p>
          </button>
          <div class="hidden absolute right-0 z-50 mt-2.5 w-32 origin-top-right rounded-md bg-white py-2
            shadow-lg ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical"
               aria-labelledby="user-menu-button" tabindex="-1" id="language_menu">
            <% I18n.available_locales.each do |locale| %>
              <p class="text-sm font-semibold leading-6 text-black text-center">
                <% if I18n.locale == locale %>
                  <%#= tag.span t(locale) %>
                <% else %>
                  <%= link_to t(locale), root_path(locale: locale) %>
                <% end %>
              </p>
            <% end %>

          </div>
        </div>
        <%= link_to t('.sign_up'), url_for(:register), class: "text-sm font-semibold leading-6 text-white" %>
        <%= link_to login_path, class: "text-sm font-semibold leading-6 text-white" do %>
          <%= t '.log_in' %>
          <span aria-hidden="true">&rarr;</span>
        <% end %>
      </div>
    <% end %>
  </nav>

  <div class="lg:hidden" role="dialog" aria-modal="true">
    <div id="mobile-header-block" class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-gray-900
    px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-white/10 hidden">

      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Jammer</span>
        </a>
        <button data-action="click->header#CloseHeaderMenu" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-400">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/25">
          <div class="space-y-2 py-6">
            <%= link_to t('.home'), root_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7
            text-white hover:bg-gray-800" %>
            <%= link_to t('.users'), users_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7
            text-white hover:bg-gray-800" %>
            <%= link_to t('.games'), games_showcase_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7
            text-white hover:bg-gray-800" %>
            <%= link_to t('.jams'), jams_showcase_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7
            text-white hover:bg-gray-800" %>
          </div>

          <% if current_user %>
            <div class="py-6">
              <%= link_to t('.dashboard'), dashboard_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7
            text-white hover:bg-gray-800" %>
              <a class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7
              text-white hover:bg-gray-800 cursor-pointer">
                <%= button_to t('.sign_out'), logout_path, method: :delete, class: "w-full flex justify-start" %>
              </a>
            </div>
          <% else %>
            <div class="py-6">
              <%= link_to t('.sign_up'), register_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7
            text-white hover:bg-gray-800" %>
              <%= link_to login_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7
            text-white hover:bg-gray-800" do %>
                <%= t('.log_in') %>
                <span aria-hidden="true">&rarr;</span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>