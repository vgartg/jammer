<div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-6 border-b border-white/5 bg-gray-900
 px-4 shadow-sm sm:px-6 lg:px-8">
  <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden"
          data-action="click->dashboard#openMobileMenu">
    <svg class="h-6 w-6" fill="none"
         viewBox="0 0 24 24"
         stroke-width="1.5"
         stroke="currentColor"
         aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
    </svg>
  </button>

  <div class="h-6 w-px bg-gray-900/10 lg:hidden" aria-hidden="true"></div>

  <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6">
    <form class="relative flex flex-1" action="#" method="GET">
      <label for="search-field" class="sr-only">Search</label>
      <svg class="pointer-events-none absolute inset-y-0 left-0 h-full w-5 text-gray-400"
           viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd"
              d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
              clip-rule="evenodd" />
      </svg>
      <input id="search-field" class="block h-full w-full bg-gray-900 border-0 py-0 pl-8 pr-0 text-white
           placeholder:text-gray-400 focus:ring-0 sm:text-sm" placeholder="Search..."
             type="search" name="search">
    </form>
    <div class="flex items-center gap-x-4 lg:gap-x-6">
      <div class="relative" data-controller="notifications">
        <button type="button" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500 relative"
                data-action="click->notifications#toggleNotificationsMenu">
          <svg class="h-6 w-6" fill="none"
               viewBox="0 0 24 24"
               stroke-width="1.5"
               stroke="currentColor"
               aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
          </svg>
          <% if @notifications && @notifications.where(read: false).count > 0 %>
      <span class="absolute top-0 right-0 inline-block h-3 w-3 rounded-full bg-red-500
       text-white text-xs flex items-center justify-center">
        <%= @notifications.where(read: false).count %>
      </span>
          <% end %>
        </button>
        <div class="hidden absolute min-w-64 w-64 sm:min-w-96 sm:w-96 right-0 z-10 mt-2.5 origin-top-left
        rounded-md bg-white pt-2 ring-1 ring-gray-900/5
         focus:outline-none max-h-80vh overflow-y-auto"
             role="menu" aria-labelledby="notifications-menu-button"
             tabindex="-1"
             id="dashboard_notifications_menu"
             data-target="notifications.notificationsMenu"
             style="max-height: 60vh" >
          <% if @notifications && @notifications.any? %>
            <div class="max-w-2xl mx-auto bg-white rounded-lg overflow-hidden">
              <% @notifications.order(created_at: :desc).first(8).each do |notification| %>
                <div class="flex items-start px-4 py-3 border-b border-gray-200 hover:bg-gray-100 transition duration-200">
                  <div class="flex-shrink-0">
                    <% if notification.notifiable.is_a?(Game) %>
                      <a href="<%= current_user.role == 'admin' ? '/admin/games/' : '/games/' %><%= notification.notifiable.id %><%= current_user.role == 'admin' ? '/edit' : '' %>">
                        <% if notification.notifiable.cover.attached? %>
                          <%= image_tag url_for(notification.notifiable.cover), alt: notification.notifiable.name,
                                        class: "w-16 h-16 lg:w-20 lg:h-20 rounded-md object-cover object-center group-hover:opacity-75" %>
                        <% else %>
                          <div class="w-16 h-16 lg:w-20 lg:h-20 bg-gray-200 rounded-md flex items-center justify-center">
                            <img src="https://via.placeholder.com/150" alt="<%= notification.notifiable.name %>"
                                 class="w-full h-full object-cover">
                          </div>
                        <% end %>
                      </a>
                    <% elsif notification.notifiable.is_a?(Jam) %>
                      <a href="<%= current_user.role == 'admin' ? '/admin/jams/' : '/jams/' %><%= notification.notifiable.id %><%= current_user.role == 'admin' ? '/edit' : '' %>">
                        <% if notification.notifiable.cover.attached? %>
                          <%= image_tag url_for(notification.notifiable.cover), alt: notification.notifiable.name,
                                        class: "w-16 h-16 lg:w-20 lg:h-20 rounded-md object-cover object-center group-hover:opacity-75" %>
                        <% else %>
                          <div class="w-16 h-16 lg:w-20 lg:h-20 bg-gray-200 rounded-md flex items-center justify-center">
                            <img src="https://via.placeholder.com/150" alt="<%= notification.notifiable.name %>"
                                 class="w-full h-full object-cover">
                          </div>
                        <% end %>
                      </a>
                    <% elsif notification.actor %>
                      <a href='<%= user_path(notification.actor) %>'>
                        <%= notification.actor.avatar.attached? ? image_tag(url_for(notification.actor.avatar), alt: "Profile Picture", class: "w-16 h-16 lg:w-20 lg:h-20 rounded-md object-cover") : image_tag("https://via.placeholder.com/150", alt: "Profile Picture", class: "w-16 h-16 lg:w-20 lg:h-20 rounded-md bg-gray-200") %>
                      </a>
                    <% end %>
                  </div>
                  <div class="ml-3 flex-1">
                    <p class="text-sm font-semibold text-gray-900">
                      <% if notification.notifiable.is_a?(Game) %>
                        <a href="<%= current_user.role == 'admin' ? '/admin/games/' : '/games/' %><%= notification.notifiable.id %><%= current_user.role == 'admin' ? '/edit' : '' %>",
                           class="text-gray-600 hover:underline"><%= notification.notifiable.name %></a>
                      <% elsif notification.notifiable.is_a?(Jam) %>
                        <a href="<%= current_user.role == 'admin' ? '/admin/jams/' : '/jams/' %><%= notification.notifiable.id %><%= current_user.role == 'admin' ? '/edit' : '' %>",
                           class="text-gray-600 hover:underline"><%= notification.notifiable.name %></a>
                      <% elsif notification.actor %>
                        <a href='<%= user_path(notification.actor) %>' class="text-gray-600 hover:underline"><%= notification.actor.name %></a>
                      <% end %>
                      <%= notification_message(notification) %>
                    </p>
                    <p class="text-xs text-gray-500"><%= notification.created_at.strftime("%d.%m.%Y, %H:%M") %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="px-4 py-2 text-sm text-gray-600 text-center">Нет уведомлений для отображения.</p>
          <% end %>
          <% if @notifications && @notifications.count > 8 %>
            <a href="/notifications" class="flex justify-center p-1">Показать все</a>
          <% end %>
        </div>
      </div>


      <div class="hidden lg:block lg:h-6 lg:w-px lg:bg-gray-900/10" aria-hidden="true"></div>

      <div class="relative">
        <% if @current_user %>
          <button type="button" class="-m-1.5 flex items-center p-1.5"
                  data-action="click->dashboard#toggleProfileMenu"
                  aria-expanded="false" aria-haspopup="true">
            <% if @current_user && @current_user.avatar.attached? %>
              <%= image_tag url_for(@current_user.avatar), alt: "Profile Picture",
                            class: "h-8 w-8 rounded-full bg-gray-50" %>
            <% else %>
              <img src="https://via.placeholder.com/150" alt="Profile Picture"
                   class="h-8 w-8 rounded-full bg-gray-50">
            <% end %>
            <span class="hidden lg:flex lg:items-center">
                  <span class="ml-4 text-sm font-semibold leading-6 text-white" aria-hidden="true">
                    <%= @current_user.name %>
                  </span>
                  <svg class="ml-2 h-5 w-5 text-gray-400"
                       viewBox="0 0 20 20"
                       fill="currentColor"
                       aria-hidden="true">
                    <path fill-rule="evenodd"
                          d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                          clip-rule="evenodd" />
                  </svg>
                </span>
          </button>
          <div class="hidden absolute right-0 z-10 mt-2.5 w-32 origin-top-right rounded-md bg-white py-2
              shadow-lg ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical"
               aria-labelledby="user-menu-button" tabindex="-1" id="dashboard_profile_menu">
            <%= button_to "Your profile", user_profile_path(id: session[:current_user]), method: :get,
                          class: "block px-3 py-1 text-sm leading-6 text-gray-900" %>
            <%= button_to "Sign out", logout_path, method: :delete,
                          class: "block px-3 py-1 text-sm leading-6 text-gray-900" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>