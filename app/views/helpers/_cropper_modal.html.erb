<div data-controller="cropper">
  <label for="avatar-upload"
         class="rounded-md bg-white/10 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-white/20">
    <%= t("buttons.change_avatar") %>
  </label>
  <input id="avatar-upload" accept=image/jpeg,image/png" data-cropper-target="input" type="file" name="user[avatar]"
         class="hidden"/>

  <div id="cropperModal" data-cropper-target="modal" class="hidden fixed z-50 inset-0 overflow-y-auto">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 transition-opacity" aria-hidden="true">
        <div class="absolute inset-0 bg-black opacity-75"></div>
      </div>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
      <div class="inline-block align-bottom bg-gray-800 rounded-lg text-left overflow-hidden
       shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
        <div class="bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div class="hidden mx-auto flex-shrink-0 items-center justify-center h-12 w-12
             rounded-full bg-red-200 sm:mx-0 sm:h-10 sm:w-10">
              <img id="imageToCrop" src="" alt="Image to crop">
            </div>
            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
              <h3 class="text-lg leading-6 font-medium text-white" id="modal-title"></h3>
              <div class="mt-2">
                <div class="crop-container">
                  <img id="image" data-cropper-target="image" src="">
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-700 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <button id="cropButton" data-cropper-target="cropButton" type="button"
                  class="w-full inline-flex justify-center
           rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base
            font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2
             focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm">
            Crop
          </button>
          <button id="cancelButton" data-cropper-target="cancelButton" type="button"
                  class="mt-3 w-full inline-flex justify-center
           rounded-md border border-gray-500 shadow-sm px-4 py-2 bg-gray-600 text-base
            font-medium text-gray-300 hover:bg-gray-700 focus:outline-none focus:ring-2
             focus:ring-offset-2 focus:ring-gray-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
