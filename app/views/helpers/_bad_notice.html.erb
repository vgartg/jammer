<div aria-live="assertive" class="flex flex-col gap-4 z-50 pointer-events-none fixed inset-0 px-4 py-6
 sm:items-start sm:p-6"
     id="notification-area" data-controller="settings">
  <% failures = flash[:failure] %>
  <% failures = Array.wrap(failures) %>

  <% if failures.present? %>
    <% failures.each do |problem| %>
      <div class="problem-block flex w-full flex-col items-center space-y-4 sm:items-end">
      <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg
      ring-1 ring-black ring-opacity-5">
        <div class="p-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                   stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </div>
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm font-medium text-gray-900"><%= problem %></p>
            </div>
            <div class="ml-4 flex flex-shrink-0">
              <button type="button" data-action="click->settings#close_notice" data-settings-target="notice"
                      class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500
               focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                <span class="sr-only">Close</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path
                    d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72
                    3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>