<!-- Отображение информации о сессиях -->
<h2 class="text-lg font-semibold text-gray-900 m-4">Active Sessions</h2>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-6 p-4">
  <% if @sessions.any? %>
    <ul class="divide-y divide-gray-200">
      <% @sessions.each do |session| %>
        <li class="py-4 flex">
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900">Session ID: <%= session.session_id %></p>
            <p class="text-sm text-gray-500">IP Address: <%= session.ip_address %></p>
            <p class="text-sm text-gray-500">Created At: <%= session.created_at %></p>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-sm text-gray-500">No active sessions found.</p>
  <% end %>
</div>