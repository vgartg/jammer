<div class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="max-w-lg w-full bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="px-6 py-4">
      <h2 class="text-2xl font-semibold text-gray-800">Найдите своих друзей</h2>
      <% @users.each do |user| %>
        <% unless user.id == session[:current_user] %>
          <div class="mt-4">
            <a href="<%= '/users/' + user.id.to_s %>">
              <div class="flex items-center space-x-4">
                <img src="https://via.placeholder.com/150" alt="Avatar 1" class="w-12 h-12 rounded-full">
                <span class="text-gray-900"><%= user.name %></span>
              </div>
            </a>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>