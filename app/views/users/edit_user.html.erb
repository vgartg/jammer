<div class="bg-gray-100 flex items-center justify-center min-h-screen" data-controller="user">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">

    <%= form_for @user, url: user_path(@user), method: :put do |f| %>
      <div class="flex items-center space-x-4 mb-6">
        <div class="relative group w-36 h-36">
          <div class="flex-shrink-0 w-36 h-36">
            <% if @user && @user.avatar.attached? %>
              <%= image_tag url_for(@user.avatar), alt: "Profile Picture", class: "avatar-image
               rounded-full border-2 border-gray-300 w-full h-full object-cover",
                            data: { target: 'user.avatarImage' } %>
            <% else %>
              <img src="https://via.placeholder.com/150" alt="Profile Picture"
                   class="avatar-image rounded-full border-2 border-gray-300 w-full h-full object-cover"
                   data-target="user.avatarImage">
            <% end %>
            <div class="absolute inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50
            rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <label for="avatar" class="text-white cursor-pointer" data-target="user.avatarLabel">
                Изменить
              </label>
            </div>
          </div>
          <%= f.file_field :avatar, id: "avatar", class: "hidden", accept: "image/*",
                           data: { target: 'user.avatarInput' } %>
        </div>
        <div>
          <h2 class="text-2xl font-bold text-gray-800">Имя: <%= @user.name %></h2>
          <p class="text-gray-600">Email: <%= @user.email %></p>
        </div>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2 border-gray-300">Личные данные</h3>
        <div class="space-y-4">

          <% fields = ['status', 'real_name', 'birthday', 'location', 'phone_number'] %>
          <% fields.each do |field| %>
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="text-gray-600"><%= field.humanize %>:</span>

              <div id="display-info-<%= field %>" data-target="user.displayInfo">
                <% if @user.send(field).blank? %>
                  <span class="text-gray-900" id="old-<%= field %>">Информации нет</span>
                <% else %>
                  <span class="text-gray-900" id="old-<%= field %>"><%= @user.send(field) %></span>
                <% end %>
                <span class="text-gray-900 hidden" id="new-<%= field %>"></span>
                <button type="button" data-action="click->user#toggleEditField" data-field="<%= field %>">Изменить</button>
              </div>

              <div id="edit-field-<%= field %>" class="hidden">
                <%= f.text_field field, id: "#{field}_input", data: { target: 'user.editField' },
                                 class: 'block w-full appearance-none rounded-md border border-gray-300 px-3
                                  py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none
                                  focus:ring-indigo-500 sm:text-sm' %>
                <button type="button" data-action="click->user#toggleEditField" data-field="<%= field %>"
                        data-action="save">Сохранить</button>
              </div>
            </div>
          <% end %>

          <div class="flex justify-between items-center py-2 border-b border-gray-200">
            <span class="text-gray-600">Загруженные игры:</span>
            <% if @user.games.any? %>
              <% @user.games.each do |game| %>
                <a href="/games/<%= game.id %>">
                  <span class="text-gray-900"><%= game.name %></span>
                </a>
              <% end %>
            <% else %>
              <span class="text-gray-900">Информации нет</span>
            <% end %>
          </div>
        </div>
        <% if @user.id == session[:current_user] %>
          <%= button_to "Сохранить", edit_user_path(@user), method: :put,
                        class: "mt-4 flex w-50 justify-center rounded-md border
                         border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white
                         shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500
                          focus:ring-offset-2" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>