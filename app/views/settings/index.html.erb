  </div>

  <div id="security-section" class="section divide-y set-menuitem divide-white/5 hidden">
    <!--
    <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
      <div>
        <h2 class="text-base font-semibold leading-7 text-white">Security and login</h2>
        <p class="mt-1 text-sm leading-6 text-gray-400"></p>
      </div>
    </div>
    -->
      <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
        <div>
          <h2 class="text-base font-semibold leading-7 text-white">Set Online Visibility</h2>
          <p class="mt-1 text-sm leading-6 text-gray-400">
            Select who can see your online status.
          </p>
        </div>

        <%= form_for @user, url: user_path(@user), method: :put, html: { class: 'md:col-span-2' } do |f| %>
          <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:max-w-xl sm:grid-cols-6">

            <div class="col-span-full">
              <label for="timezone" class="block text-sm font-medium leading-6 text-white">Who can see my online?</label>
              <div class="mt-2 relative">
                <%= f.select :visibility,
                             options_for_select([
                                                  ['All'],
                                                  ['Friends'],
                                                  ['None']
                                                ], selected: @user.visibility),
                             {},
                             class: 'block w-full appearance-none rounded-md bg-gray-800 text-white py-2
                           px-3 leading-tight focus:outline-none focus:ring-2
                           focus:ring-indigo-500 max-h-48 overflow-y-auto',
                             id: 'visibility' %>
              </div>
            </div>

            <% if @user.id == session[:current_user] %>
              <div class="mt-4">
                <%= f.submit "Save", id: "account-online-info-button-save", class: "mt-4 flex w-50 justify-center
               rounded-md border
                         border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white
                         shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500
                          focus:ring-offset-2 cursor-pointer" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
        <div>
          <h2 class="text-base font-semibold leading-7 text-white">Change password</h2>
          <p class="mt-1 text-sm leading-6 text-gray-400">Update your password associated with your account.</p>
        </div>

        <%= form_for @user, url: user_path(@user), method: :put, html: { class: 'md:col-span-2' } do |f| %>
          <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:max-w-xl sm:grid-cols-6">
            <div class="col-span-full">
              <label for="current-password" class="block text-sm font-medium leading-6 text-white">
                Current password
              </label>
              <div class="mt-2">
                <%= f.password_field :current_password, id: 'current-password',
                                     class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1
                     ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500
                     sm:text-sm sm:leading-6' %>
              </div>
            </div>

            <div class="col-span-full">
              <label for="new-password" class="block text-sm font-medium leading-6 text-white">New password</label>
              <div class="mt-2">
                <%= f.password_field :password, id: 'new-password',
                                     class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm
                     ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset
                     focus:ring-indigo-500 sm:text-sm sm:leading-6' %>
              </div>
            </div>

            <div class="col-span-full">
              <label for="confirm-password" class="block text-sm font-medium leading-6 text-white">
                Confirm password
              </label>
              <div class="mt-2">
                <%= f.password_field :password_confirmation, id: 'confirm-password',
                                     class: 'block w-full rounded-md border-0 bg-white/5 py-1.5
                     text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2
                      focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6' %>
              </div>
            </div>
          </div>

          <div class="mt-8 flex">
            <% if @user.id == session[:current_user] %>
              <%= f.submit "Save", id: "new-password-button-save",
                           class: "mt-4 flex w-50 justify-center rounded-md border
                         border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white
                         shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500
                          focus:ring-offset-2 cursor-pointer" %>
            <% end %>
          </div>

        <% end %>
      </div>

      <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
        <div>
          <h2 class="text-base font-semibold leading-7 text-white">Log out other sessions</h2>
          <p class="mt-1 text-sm leading-6 text-gray-400">
            Please enter your password to confirm you would like to log out of your other
            sessions across all of your devices.
          </p>
          <p class="mt-1 text-sm leading-6 text-red-400">Attention!
            <span class="mt-1 text-sm leading-6 text-gray-400">After logging out of other sessions, your account
          will be forgotten on our platform, i.e. the "Remember me" button will be reset
          if you pressed it during authorization</span>
          </p>
        </div>

        <%= form_tag logout_other_sessions_sessions_path, method: :post, class: 'md:col-span-2' do %>
          <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:max-w-xl sm:grid-cols-6">
            <div class="col-span-full">
              <label for="logout-password" class="block text-sm font-medium leading-6 text-white">Your password</label>
              <div class="mt-2">
                <%= password_field_tag :password, nil, id: 'logout-password',
                                       class: 'block w-full rounded-md border-0
                                      bg-white/5 py-1.5 text-white shadow-sm ring-1
                                  ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500
                                  sm:text-sm sm:leading-6' %>
              </div>
            </div>
          </div>

          <div class="mt-8 flex">
            <%= submit_tag 'Log out other sessions', class: 'rounded-md bg-indigo-500 px-3 py-2 text-sm font-semibold
                    text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2
                    focus-visible:outline-offset-2 focus-visible:outline-indigo-500' %>
          </div>
        <% end %>
      </div>

      <div data-controller="modal">
        <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
          <div>
            <h2 class="text-base font-semibold leading-7 text-white">Delete account</h2>
            <p class="mt-1 text-sm leading-6 text-gray-400">
              No longer want to use our service? You can delete your account here. This action is not reversible.
              All information related to this account will be deleted permanently.
            </p>
          </div>

          <div>
            <%= button_tag 'Удалить аккаунт',
                           class: 'rounded-md bg-red-500 px-4 py-2 text-white font-semibold hover:bg-red-600',
                           data: { action: 'click->modal#open' } %>
          </div>

          <div id="modal" data-target="modal.modal" class="modal hidden fixed inset-0 bg-gray-900 bg-opacity-75
         flex items-center justify-center z-50">
            <div class="modal-content bg-gray-800 p-4 rounded shadow-md w-full sm:w-96">
              <p class="text-lg text-gray-200">Введите ваш пароль для подтверждения удаления аккаунта:</p>
              <div class="mt-4">
                <%= form_for @user, url: user_path(@user), method: :delete, html: { class: 'delete-account-form',
                                                                                    data: { action: 'submit->modal#submitForm' } } do |f| %>
                  <div class="mb-4">
                    <%= f.label :password, 'Пароль', class: 'block text-gray-300' %>
                    <%= f.password_field :password, class: 'mt-1 block w-full rounded-md
