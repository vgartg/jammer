<div class="bg-white">
  <div class="pb-16 pt-6 sm:pb-24">
    <div class="mx-auto mt-8 max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="lg:grid lg:auto-rows-min lg:grid-cols-12">
        <!-- Image gallery -->
        <div class="lg:col-span-12">
          <div class="grid grid-cols-1 lg:grid-cols-2">
            <% if @game && @game.cover.attached? %>
              <%= image_tag url_for(@game.cover), alt: @game.name,
                            class: "max-w-md h-60 rounded-md bg-gray-200 object-cover
                            object-center group-hover:opacity-75" %>
            <% else %>
              <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200
                          lg:aspect-none group-hover:opacity-75 lg:h-80">
                <img src="https://via.placeholder.com/300" alt="<%= @game.name %>"
                     class="object-cover object-center ">
              </div>
            <% end %>

            <% if @game.html5_id.present? %>
              <div class="relative w-full max-w-3xl aspect-[4/3] bg-gray-100 rounded-lg overflow-hidden shadow-md">
                <iframe src="http://localhost:4567/game/<%= @game.html5_id %>" width="600" height="450" frameborder="0"></iframe>
              </div>
            <% end %>
          </div>
        </div>

        <div class="lg:col-span-12 mt-10">
          <div class="lg:col-span-5 lg:col-start-8">
            <div class="flex justify-between">
              <h1 class="text-xl font-medium text-gray-900 break-all"><%= @game.name %></h1>
            </div>
            <% if @game.status != 1 %>
              <p class="mt-2 text-red-400 sm:text-sm">Данная игра
                <%= @game.status == 0 ? 'находится на модерации' : 'отклонена модератором' %>
              </p>
            <% end %>
          </div>

          <div class="mt-10">
            <h2 class="text-sm font-medium text-gray-900">Описание:</h2>

            <div class="prose prose-sm mt-4 text-gray-500">
              <p class="break-all">
                <%= @game.description %>
              </p>
            </div>
          </div>

          <div class="mt-10">
            <h2 class="text-sm font-medium text-gray-900">Теги:</h2>
            <div class="mt-4 text-gray-500">
              <% if @game.tags.any? %>
                <ul class="flex flex-wrap gap-2">
                  <% @game.tags.each do |tag| %>
                    <li class="bg-gray-200 px-3 py-1 rounded-full text-sm font-medium text-gray-700">
                      <%= tag.name %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p>Теги не найдены</p>
              <% end %>
            </div>
          </div>

          <div class="mt-10">
            <h2 class="text-sm font-medium text-gray-900">Автор:</h2>
            <div class="prose prose-sm mt-4 text-gray-500">
              <% if @game.author.present? %>
                <a class="break-all" href="<%= user_profile_path(@game.author) %>">
                  <%= @game.author.name %>
                </a>
              <% else %>
                <p>Автор не найден</p>
              <% end %>
            </div>
          </div>

          <div class="mt-10">
            <h2 class="text-sm font-medium text-gray-900">Файлы игры:</h2>
            <div class="mt-4">
              <% if @game.game_file.attached? %>
                <p class="text-red-600">Внимание: мы не несем ответственности за содержимое архива.</p>
                <a href="<%= url_for(@game.game_file) %>" download class="text-indigo-600 hover:text-indigo-900">
                  Скачать архив (.zip, .rar, .7z)
                </a>
              <% else %>
                <p class="text-gray-500">Файл игры не прикреплён.</p>
              <% end %>
            </div>

            <% if @game.html5_zip.attached? %>
              <div class="mt-10">
                <h2 class="text-sm font-medium text-gray-900">HTML5 версия:</h2>
                <div class="mt-2">
                  <%= link_to "Скачать HTML5 архив", url_for(@game.html5_zip), class: "text-indigo-600 hover:underline" %>
                </div>
              </div>
            <% end %>

          </div>


          <% if @game.author.present? && session[:current_user] == @game.author.id %>
            <div>
              <%= button_to "Редактировать игру", game_edit_path(@game), method: :get,
                            class: "mt-4 flex w-50 justify-center rounded-md border
                              border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white
                              shadow-sm hover:bg-indigo-700 focus:outline-none
                               focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
              <%= button_to "Удалить игру", game_destroy_path(@game), method: :delete,
                            class: "mt-4 flex w-50 justify-center rounded-md border
                              border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white
                              shadow-sm hover:bg-indigo-700 focus:outline-none
                               focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          <% elsif current_user %>
            <div class="mt-4">
              <%= render "helpers/report_form", report_item: @game %>
            </div>
          <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>